<div class="row">
  <div class="col-md-4 col-md-offset-4 panel panel-default">
    <div class="pull-left">
      <h4>New to dindin? <span>Sign up</span></h4> 
    </div>
      <div class="clearfix"></div>
    <hr />
      <%= form_for(:user, :url => registration_path(:user)) do |f| %>
      <%= devise_error_messages! %>
    
    <div><%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, size: 40 %></div><br/>

    <div><%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", size: 40 %></div><br/>

    <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", size: 40%></div><br/>

    <div class="form-group tall">
          <%= f.submit "Sign up for dindin", :class => "btn btn-warning pull-right" %>
    </div>
      <% end %>
  </div>
</div>
